{
	"name": "wikibase/data-model-services",
	"type": "library",
	"description": "Services around the Wikibase DataModel",
	"keywords": [
		"Wikibase",
		"DataModel",
		"Wikidata"
	],
	"homepage": "https://github.com/wmde/WikibaseDataModelServices",
	"license": "GPL-2.0+",
	"authors": [
		{
			"name": "Jeroen De Dauw",
			"email": "jeroendedauw@gmail.com",
			"homepage": "http://jeroendedauw.com"
		}
	],
	"support": {
		"irc": "irc://irc.freenode.net/wikidata"
	},
	"require": {
		"php": ">=5.5.0",
		"wikibase/data-model": "~6.3",
		"data-values/data-values": "~0.1|~1.0",
		"diff/diff": "~2.0|~1.0",
		"wikimedia/assert": "~0.2.2"
	},
	"require-dev": {
		"squizlabs/php_codesniffer": "~2.3",
		"phpmd/phpmd": "~2.3"
	},
	"autoload": {
		"psr-4": {
			"Wikibase\\DataModel\\Services\\": "src/"
		}
	},
	"extra": {
		"branch-alias": {
			"dev-master": "3.7.x-dev"
		}
	},
	"scripts": {
		"test": [
			"composer validate --no-interaction",
			"phpunit --coverage-php /dev/null"
		],
		"cs": [
			"composer phpcs",
			"composer phpmd"
		],
		"ci": [
			"composer test",
			"composer cs"
		],
		"phpcs": [
			"vendor/bin/phpcs src/* tests/* --standard=phpcs.xml --extensions=php -sp"
		],
		"phpmd": [
			"vendor/bin/phpmd src/,tests/unit/ text phpmd.xml"
		]
	}
}
